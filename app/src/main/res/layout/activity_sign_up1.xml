<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_background"
    tools:context=".SignUp1">

    <ImageView
        android:id="@+id/pageNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_signup_1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pageNo"
        android:layout_marginStart="30dp"
        android:src="@drawable/ic_signup_background" />

    <ImageView
        android:id="@+id/main_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pageNo"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/basic_details" />

    <TextView
        android:id="@+id/main_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_image"
        android:layout_margin="10dp"
        android:fontFamily="@font/muli_extrabold"
        android:text="@string/basic_details"
        android:textColor="@color/headings"
        android:textSize="24sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_heading"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_signup_left" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_heading"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_signup_right" />

    <LinearLayout
        android:id="@+id/input_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/main_heading">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:importantForAutofill="no"
                android:id="@+id/firstName"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_margin="12dp"
                android:background="@drawable/signup_text"
                android:hint="@string/first_name"
                android:inputType="text" />

            <EditText
                android:importantForAutofill="no"
                android:id="@+id/lastName"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_margin="12dp"
                android:background="@drawable/signup_text"
                android:hint="@string/last_name"
                android:inputType="text" />
        </LinearLayout>

        <EditText
            android:id="@+id/phoneNumber"
            android:importantForAutofill="no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_margin="12dp"
            android:background="@drawable/signup_text"
            android:hint="@string/phone"
            android:inputType="phone"
            android:maxLength="10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender"
            android:layout_marginStart="15dp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/purple_700"
                android:layout_margin="12dp"
                app:cardCornerRadius="70dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_male"
                    android:layout_margin="2dp"
                    android:background="@null"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/purple_700"
                android:layout_margin="12dp"
                app:cardCornerRadius="70dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_female"
                    android:layout_margin="2dp"
                    android:background="@null"/>

            </androidx.cardview.widget.CardView>


            <EditText
                android:importantForAutofill="no"
                android:id="@+id/dob"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_margin="12dp"
                android:background="@drawable/signup_text"
                android:hint="@string/dob"
                android:inputType="none"/>



        </LinearLayout>

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_purple"
        android:fontFamily="@font/muli_semibold"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_margin="20dp"
        android:layout_below="@id/input_area"/>
</RelativeLayout>
